.container.mx-auto.px-4.sm:px-6.lg:px-8.py-6.sm:py-8
  .flex.flex-col.sm:flex-row.items-start.sm:items-center.justify-between.mb-6.sm:mb-8.gap-4
    %h1.text-2xl.sm:text-3xl.font-bold{style: "color: #3A6363;"} Invited Vendors
    .flex.items-center.gap-3.sm:gap-4.w-full.sm:w-auto
      = link_to new_admin_invited_vendor_path, class: 'inline-flex items-center justify-center px-4 py-2 rounded-lg transition text-white text-sm sm:text-base shadow-md w-full sm:w-auto', style: 'background-color: #3A6363;', onmouseover: "this.style.backgroundColor='#2d4d4d'", onmouseout: "this.style.backgroundColor='#3A6363'" do
        %i.fas.fa-plus.mr-2
        %span.hidden.sm:inline Invite New Vendor
        %span.sm:hidden Invite Vendor

  / Statistics Cards
  .grid.grid-cols-1.sm:grid-cols-2.md:grid-cols-3.gap-3.sm:gap-4.md:gap-6.mb-6.sm:mb-8
    .bg-white.rounded-lg.shadow-md.p-4.sm:p-6.border-l-4{style: "border-color: #3A6363;"}
      .flex.items-center
        .flex-shrink-0
          .w-10.h-10.sm:w-12.sm:h-12.rounded-full.flex.items-center.justify-center{style: "background-color: #e8f0f0;"}
            %i.fas.fa-users.text-lg.sm:text-xl{style: "color: #3A6363;"}
        .ml-3.sm:ml-4
          %p.text-xs.sm:text-sm.font-medium.text-gray-500 Total Invited
          %p.text-xl.sm:text-2xl.font-bold.text-gray-900= @invited_vendors.count

    .bg-white.rounded-lg.shadow-md.p-4.sm:p-6.border-l-4.border-yellow-400
      .flex.items-center
        .flex-shrink-0
          .w-10.h-10.sm:w-12.sm:h-12.bg-yellow-100.rounded-full.flex.items-center.justify-center
            %i.fas.fa-clock.text-lg.sm:text-xl.text-yellow-600
        .ml-3.sm:ml-4
          %p.text-xs.sm:text-sm.font-medium.text-gray-500 Pending
          %p.text-xl.sm:text-2xl.font-bold.text-gray-900= @invited_vendors.where(status: 'pending').count

    .bg-white.rounded-lg.shadow-md.p-4.sm:p-6.border-l-4.border-green-400
      .flex.items-center
        .flex-shrink-0
          .w-10.h-10.sm:w-12.sm:h-12.bg-green-100.rounded-full.flex.items-center.justify-center
            %i.fas.fa-check.text-lg.sm:text-xl.text-green-600
        .ml-3.sm:ml-4
          %p.text-xs.sm:text-sm.font-medium.text-gray-500 Accepted
          %p.text-xl.sm:text-2xl.font-bold.text-gray-900= @invited_vendors.where(status: 'accepted').count

  / Mobile Card View - Hidden on Desktop
  - if @invited_vendors.any?
    .block.md:hidden.space-y-3.sm:space-y-4.mb-6
      - @invited_vendors.each do |invited_vendor|
        .bg-white.rounded-lg.shadow-md.p-4.border-l-4{style: "border-color: #3A6363;"}
          .flex.items-start.gap-3.mb-3
            .flex-shrink-0
              .h-12.w-12.rounded-full.flex.items-center.justify-center{style: "background: linear-gradient(to bottom right, #3A6363, #2d4d4d);"}
                %span.text-white.font-bold.text-base= invited_vendor.first_name&.first&.upcase || invited_vendor.email.first.upcase
            .flex-1.min-w-0
              %div.text-base.font-semibold.text-gray-900= "#{invited_vendor.first_name} #{invited_vendor.last_name}"
              %div.text-sm.text-gray-500.break-all= invited_vendor.email

          .space-y-2
            .flex.justify-between.items-center.py-2.border-b.border-gray-100
              %span.text-xs.font-medium.text-gray-500 Status
              %div
                - status_class = case invited_vendor.status
                - when 'pending' then 'bg-yellow-100 text-yellow-800'
                - when 'accepted' then 'bg-green-100 text-green-800'
                - else 'bg-gray-100 text-gray-800'
                %span.inline-flex.items-center.px-2.py-1.rounded-full.text-xs.font-medium{class: status_class}
                  - if invited_vendor.status == 'pending'
                    %i.fas.fa-clock.mr-1
                  - elsif invited_vendor.status == 'accepted'
                    %i.fas.fa-check.mr-1
                  = invited_vendor.status.titleize

            .flex.justify-between.items-center.py-2
              %span.text-xs.font-medium.text-gray-500 Invite Sent
              %div
                - if invited_vendor.invite_sent?
                  %span.inline-flex.items-center.text-xs.font-medium.text-green-600
                    %i.fas.fa-check.mr-1
                    Sent
                - else
                  %span.inline-flex.items-center.text-xs.font-medium.text-red-600
                    %i.fas.fa-times.mr-1
                    Not Sent

            - if !invited_vendor.invite_sent?
              .pt-2.border-t.border-gray-100
                = link_to '#', class: 'inline-flex items-center justify-center gap-2 w-full px-3 py-2 rounded-lg text-white text-sm font-medium transition-all', style: 'background-color: #3A6363;', onmouseover: "this.style.backgroundColor='#2d4d4d'", onmouseout: "this.style.backgroundColor='#3A6363'", title: 'Send Invite' do
                  %i.fas.fa-paper-plane
                  %span Send Invite

  / Desktop Table View - Hidden on Mobile
  .bg-white.rounded-lg.shadow-md.overflow-hidden.hidden.md:block
    .overflow-x-auto
      %table.min-w-full.divide-y.divide-gray-200
        %thead{style: "background-color: #e8f0f0;"}
          %tr
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Name
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Email
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Status
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Invite Sent
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Actions
        %tbody.bg-white.divide-y.divide-gray-200
          - @invited_vendors.each do |invited_vendor|
            %tr.transition-colors{style: "transition: background-color 0.2s;", onmouseover: "this.style.backgroundColor='#e8f0f0'", onmouseout: "this.style.backgroundColor='white'"}
              %td.px-6.py-4.whitespace-nowrap
                .flex.items-center
                  .flex-shrink-0.h-10.w-10
                    .h-10.w-10.rounded-full.flex.items-center.justify-center{style: "background: linear-gradient(to bottom right, #3A6363, #2d4d4d);"}
                      %span.text-white.font-bold.text-sm= invited_vendor.first_name&.first&.upcase || invited_vendor.email.first.upcase
                  .ml-4
                    %div.text-sm.font-medium.text-gray-900= "#{invited_vendor.first_name} #{invited_vendor.last_name}"
                    %div.text-sm.text-gray-500= invited_vendor.email

              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900= invited_vendor.email

              %td.px-6.py-4.whitespace-nowrap
                - status_class = case invited_vendor.status
                - when 'pending' then 'bg-yellow-100 text-yellow-800'
                - when 'accepted' then 'bg-green-100 text-green-800'
                - else 'bg-gray-100 text-gray-800'
                %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium{class: status_class}
                  - if invited_vendor.status == 'pending'
                    %i.fas.fa-clock.mr-1
                  - elsif invited_vendor.status == 'accepted'
                    %i.fas.fa-check.mr-1
                  = invited_vendor.status.titleize

              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-500
                - if invited_vendor.invite_sent?
                  %span.text-green-600
                    %i.fas.fa-check.mr-1
                    Sent
                - else
                  %span.text-red-600
                    %i.fas.fa-times.mr-1
                    Not Sent

              %td.px-6.py-4.whitespace-nowrap.text-sm.font-medium
                .flex.items-center.space-x-2
                  - if !invited_vendor.invite_sent?
                    = link_to '#', class: 'transition-colors', style: 'color: #3A6363;', onmouseover: "this.style.color='#2d4d4d'", onmouseout: "this.style.color='#3A6363'", title: 'Send Invite' do
                      %i.fas.fa-paper-plane

  - if @invited_vendors.empty?
    .text-center.py-12
      .text-gray-500
        %i.fas.fa-users.text-3xl.sm:text-4xl.mb-4{style: "color: #3A6363;"}
        %p.text-base.sm:text-lg.font-medium No invited vendors found
        %p.text-xs.sm:text-sm Start by inviting new vendors to join the platform

  / Recent Activity
  .mt-6.sm:mt-8.bg-white.rounded-lg.shadow-md.p-4.sm:p-6
    %h2.text-lg.sm:text-xl.font-semibold.mb-3.sm:mb-4{style: "color: #3A6363;"} Recent Activity
    .space-y-3.sm:space-y-4
      - @invited_vendors.order(created_at: :desc).limit(5).each do |invited_vendor|
        .flex.flex-col.sm:flex-row.items-start.sm:items-center.justify-between.p-3.sm:p-4.rounded-lg.gap-3{style: "background-color: #f0f5f5;"}
          .flex.items-center.gap-3.flex-1.min-w-0
            .w-10.h-10.sm:w-12.sm:h-12.rounded-full.flex.items-center.justify-center.flex-shrink-0{style: "background: linear-gradient(to bottom right, #3A6363, #2d4d4d);"}
              %span.text-white.font-bold.text-sm.sm:text-base= invited_vendor.first_name&.first&.upcase || invited_vendor.email.first.upcase
            %div.min-w-0.flex-1
              %p.text-sm.sm:text-base.font-medium.text-gray-900= "#{invited_vendor.first_name} #{invited_vendor.last_name}"
              %p.text-xs.sm:text-sm.text-gray-500.break-all= invited_vendor.email
          %div.flex.items-center.gap-3.sm:gap-0.sm:flex-col.sm:text-right.w-full.sm:w-auto.justify-between.sm:justify-start
            %p.text-xs.text-gray-500= invited_vendor.created_at.strftime('%b %d, %Y')
            %p.text-xs.font-medium{class: invited_vendor.status == 'pending' ? 'text-yellow-600' : invited_vendor.status == 'accepted' ? 'text-green-600' : 'text-red-600'}
              = invited_vendor.status.titleize 