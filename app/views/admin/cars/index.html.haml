.container.mx-auto.px-4.py-8
  .flex.items-center.justify-between.mb-8
    %h1.text-3xl.font-bold.text-gray-900 Vehicles
    = link_to download_report_admin_cars_path(format: :csv), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md transition flex items-center" do
      %i.fas.fa-download.mr-2
      Download Report

  / Filters and Search
  .bg-white.rounded-lg.shadow-md.p-6.mb-8
    = form_with url: admin_cars_path, method: :get, local: true, class: 'space-y-4' do |f|
      .grid.grid-cols-1.md:grid-cols-5.gap-4
        .field
          = f.label :model, 'Model', class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.text_field :model, value: params[:model], placeholder: 'Car model', class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500'
        
        .field
          = f.label :vendor, 'Brand', class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.text_field :vendor, value: params[:vendor], placeholder: 'Car brand', class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500'
        
        .field
          = f.label :year, 'Year', class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.number_field :year, value: params[:year], placeholder: 'Year', class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500'
        
        .field
          = f.label :status, 'Status', class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.select :status, options_for_select([['All Statuses', ''],['Available', 'available'],['Rented', 'rented']], params[:status]), {}, class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500'
        
        .field.flex.items-end
          = f.submit 'Filter', class: 'bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md transition'
          = link_to 'Clear', admin_cars_path, class: 'ml-2 bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition'

  / Vehicles Table
  .bg-white.rounded-lg.shadow-md.overflow-hidden
    .overflow-x-auto
      %table.min-w-full.divide-y.divide-gray-200
        %thead.bg-gray-50
          %tr
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Brand
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Model
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Year
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Color
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Daily Price
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Status
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Vendor
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Actions
        %tbody.bg-white.divide-y.divide-gray-200
          - @cars.each do |car|
            %tr.hover:bg-gray-50
              %td.px-6.py-4.whitespace-nowrap.text-sm.font-medium.text-gray-900= car.brand
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900= car.model
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900= car.year
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900= car.color
              %td.px-6.py-4.whitespace-nowrap.text-sm.font-medium.text-gray-900= car.daily_price ? number_to_currency(car.daily_price) : 'N/A'
              %td.px-6.py-4.whitespace-nowrap
                - document_status = car.car_document&.document_status
                - if document_status == 'approved'
                  %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium{class: car.status == 'available' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800'}
                    = car.status&.capitalize
                - elsif document_status == 'pending'
                  %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium.bg-yellow-100.text-yellow-800
                    Mulkiya Approval Pending
                - elsif document_status == 'rejected'
                  %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium.bg-rose-100.text-rose-800
                    Mulkiya Rejected
                - else
                  %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium.bg-gray-100.text-gray-800
                    No Document
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900= car.vendor&.company_name || 'N/A'
              %td.px-6.py-4.whitespace-nowrap.text-sm.font-medium
                = link_to admin_car_path(car), class: 'text-blue-600 hover:text-blue-900' do
                  %i.fas.fa-eye

    / Pagination
    - if @cars.respond_to?(:current_page)
      .bg-white.px-4.py-3.border-t.border-gray-200.sm:px-6
        .flex.items-center.justify-between
          .flex-1.flex.justify-between.sm:hidden
            - if @cars.prev_page
              = link_to 'Previous', admin_cars_path(page: @cars.prev_page), class: 'relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50'
            - if @cars.next_page
              = link_to 'Next', admin_cars_path(page: @cars.next_page), class: 'ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50'
          .hidden.sm:flex-1.sm:flex.sm:items-center.sm:justify-between
            %div
              %p.text-sm.text-gray-700
                Showing
                %span.font-medium= @cars.offset_value + 1
                to
                %span.font-medium= @cars.offset_value + @cars.length
                of
                %span.font-medium= @cars.total_count
                results
            %div
              .relative.z-0.inline-flex.shadow-sm.rounded-md
                - if @cars.prev_page
                  = link_to admin_cars_path(page: @cars.prev_page), class: 'relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50' do
                    %i.fas.fa-chevron-left
                - if @cars.next_page
                  = link_to admin_cars_path(page: @cars.next_page), class: 'relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50' do
                    %i.fas.fa-chevron-right

  - if @cars.empty?
    .text-center.py-12
      .text-gray-500
        %i.fas.fa-car.text-4xl.mb-4
        %p.text-lg.font-medium No vehicles found
        %p.text-sm Try adjusting your search or filter criteria 