.container.mx-auto.px-4.py-8
  .flex.items-center.justify-between.mb-8
    %h1.text-3xl.font-bold.text-gray-900 Customers
    = link_to download_report_admin_customers_path(format: :csv), class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md transition flex items-center" do
      %i.fas.fa-download.mr-2
      Download Report

  / Filters and Search
  .bg-white.rounded-lg.shadow-md.p-6.mb-8
    = form_with url: admin_customers_path, method: :get, local: true, class: 'space-y-4' do |f|
      .grid.grid-cols-1.md:grid-cols-4.gap-4
        .field
          = f.label :name, 'Name', class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.text_field :name, value: params[:name], placeholder: 'Customer name', class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500'
        
        .field
          = f.label :email, 'Email', class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.text_field :email, value: params[:email], placeholder: 'Customer email', class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500'
        
        .field
          = f.label :phone, 'Phone', class: 'block text-sm font-medium text-gray-700 mb-2'
          = f.text_field :phone, value: params[:phone], placeholder: 'Phone number', class: 'w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-blue-500 focus:border-blue-500'
        
        .field.flex.items-end
          = f.submit 'Filter', class: 'bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded-md transition'
          = link_to 'Clear', admin_customers_path, class: 'ml-2 bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition'

  / Customers Table
  .bg-white.rounded-lg.shadow-md.overflow-hidden
    .overflow-x-auto
      %table.min-w-full.divide-y.divide-gray-200
        %thead.bg-gray-50
          %tr
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider #
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Name
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Email
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Phone
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Status
            %th.px-6.py-3.text-left.text-xs.font-medium.text-gray-500.uppercase.tracking-wider Actions
        %tbody.bg-white.divide-y.divide-gray-200
          - @users.each_with_index do |user, index|
            %tr.hover:bg-gray-50
              %td.px-6.py-4.whitespace-nowrap.text-sm.font-medium.text-gray-900= index + 1
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900
                .flex.flex-col
                  %span.font-medium= user.full_name.presence || 'N/A'
                  %span.text-xs.text-gray-500= user.nationality&.capitalize || 'N/A'
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900= user.email
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900= user.phone || 'N/A'
              %td.px-6.py-4.whitespace-nowrap
                - status = user.active_for_authentication? ? 'Active' : 'Inactive'
                %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium{class: status == 'Active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'}
                  = status
              %td.px-6.py-4.whitespace-nowrap.text-sm.font-medium
                = link_to admin_customer_path(user), class: 'text-blue-600 hover:text-blue-900' do
                  %i.fas.fa-eye

    / Pagination
    - if @users.respond_to?(:current_page)
      .bg-white.px-4.py-3.border-t.border-gray-200.sm:px-6
        .flex.items-center.justify-between
          .flex-1.flex.justify-between.sm:hidden
            - if @users.prev_page
              = link_to 'Previous', admin_customers_path(page: @users.prev_page), class: 'relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50'
            - if @users.next_page
              = link_to 'Next', admin_customers_path(page: @users.next_page), class: 'ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50'
          .hidden.sm:flex-1.sm:flex.sm:items-center.sm:justify-between
            %div
              %p.text-sm.text-gray-700
                Showing
                %span.font-medium= @users.offset_value + 1
                to
                %span.font-medium= @users.offset_value + @users.length
                of
                %span.font-medium= @users.total_count
                results
            %div
              .relative.z-0.inline-flex.shadow-sm.rounded-md
                - if @users.prev_page
                  = link_to admin_customers_path(page: @users.prev_page), class: 'relative inline-flex items-center px-2 py-2 rounded-l-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50' do
                    %i.fas.fa-chevron-left
                - if @users.next_page
                  = link_to admin_customers_path(page: @users.next_page), class: 'relative inline-flex items-center px-2 py-2 rounded-r-md border border-gray-300 bg-white text-sm font-medium text-gray-500 hover:bg-gray-50' do
                    %i.fas.fa-chevron-right

  - if @users.empty?
    .text-center.py-12
      .text-gray-500
        %i.fas.fa-users.text-4xl.mb-4
        %p.text-lg.font-medium No customers found
        %p.text-sm Try adjusting your search or filter criteria 