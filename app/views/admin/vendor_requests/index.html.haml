.max-w-7xl.mx-auto.px-4.sm:px-6.lg:px-8.py-6.sm:py-8
  .flex.flex-col.sm:flex-row.justify-between.items-start.sm:items-center.mb-6.sm:mb-8.gap-4
    %h1.text-2xl.sm:text-3xl.font-bold{style: "color: #3A6363;"} Vendor Join Requests
    .flex.flex-wrap.gap-2.sm:gap-3.w-full.sm:w-auto
      = link_to 'All', admin_vendor_requests_path,
        class: "px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm sm:text-base font-medium transition-colors #{params[:status].blank? ? 'text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}",
        style: params[:status].blank? ? 'background-color: #3A6363;' : ''
      = link_to 'Pending', admin_vendor_requests_path(status: 'pending'),
        class: "px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm sm:text-base font-medium transition-colors #{params[:status] == 'pending' ? 'bg-yellow-500 text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}"
      = link_to 'Approved', admin_vendor_requests_path(status: 'approved'),
        class: "px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm sm:text-base font-medium transition-colors #{params[:status] == 'approved' ? 'bg-green-500 text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}"
      = link_to 'Rejected', admin_vendor_requests_path(status: 'rejected'),
        class: "px-3 sm:px-4 py-1.5 sm:py-2 rounded-lg text-sm sm:text-base font-medium transition-colors #{params[:status] == 'rejected' ? 'bg-red-500 text-white shadow-md' : 'bg-gray-100 text-gray-700 hover:bg-gray-200'}"

  - if @vendor_requests.blank?
    .bg-white.rounded-xl.shadow-sm.p-6.sm:p-8.text-center
      %i.fas.fa-inbox.text-4xl.sm:text-5xl.mb-3.sm:mb-4{style: "color: #3A6363;"}
      %p.text-base.sm:text-lg.font-medium{style: "color: #3A6363;"} No vendor requests found
      %p.text-sm.text-gray-500.mt-2 There are no requests matching your filter criteria
  - else
    / Mobile Card View - Hidden on Desktop
    .block.lg:hidden.space-y-3.sm:space-y-4.mb-6
      - @vendor_requests.each do |request|
        .bg-white.rounded-lg.shadow-md.p-4.border-l-4{style: "border-color: #3A6363;"}
          / Header with Name and Status
          .flex.justify-between.items-start.mb-3
            %div.flex-1.min-w-0
              %h3.text-base.font-bold.text-gray-900= request.full_name
              %p.text-sm.text-gray-600.break-all= request.email
            %div.flex-shrink-0.ml-2
              - case request.status
              - when 'pending'
                %span.inline-flex.items-center.px-2.py-1.rounded-full.text-xs.font-semibold.bg-yellow-100.text-yellow-800
                  %i.fas.fa-clock.mr-1
                  Pending
              - when 'approved'
                %span.inline-flex.items-center.px-2.py-1.rounded-full.text-xs.font-semibold.bg-green-100.text-green-800
                  %i.fas.fa-check.mr-1
                  Approved
              - when 'rejected'
                %span.inline-flex.items-center.px-2.py-1.rounded-full.text-xs.font-semibold.bg-red-100.text-red-800
                  %i.fas.fa-times.mr-1
                  Rejected

          / Details
          .space-y-2
            .flex.justify-between.items-center.py-2.border-b.border-gray-100
              %span.text-xs.font-medium.text-gray-500 Company
              %span.text-sm.font-medium.text-gray-900= request.company_name

            .flex.justify-between.items-center.py-2.border-b.border-gray-100
              %span.text-xs.font-medium.text-gray-500 Vehicle Count
              %span.text-sm.font-medium{style: "color: #3A6363;"}= request.vehicle_count

            .flex.justify-between.items-center.py-2.border-b.border-gray-100
              %span.text-xs.font-medium.text-gray-500 Contact
              - if request.phone.present?
                %span.text-sm.text-gray-900= request.phone
              - else
                %span.text-sm.text-gray-400 N/A

            .flex.justify-between.items-center.py-2
              %span.text-xs.font-medium.text-gray-500 Submitted
              %span.text-sm.text-gray-900= request.created_at.strftime('%b %d, %Y')

          / Actions
          - if request.pending?
            .flex.gap-2.mt-3.pt-3.border-t.border-gray-100
              = button_to approve_admin_vendor_request_path(request), method: :patch, class: 'flex-1 inline-flex items-center justify-center gap-2 px-3 py-2 bg-green-500 text-white text-sm font-medium rounded-lg hover:bg-green-600 transition-colors shadow-md', data: { confirm: 'Are you sure you want to approve this request?' } do
                %i.fas.fa-check
                %span Approve
              = button_to reject_admin_vendor_request_path(request), method: :patch, class: 'flex-1 inline-flex items-center justify-center gap-2 px-3 py-2 bg-red-500 text-white text-sm font-medium rounded-lg hover:bg-red-600 transition-colors shadow-md', data: { confirm: 'Are you sure you want to reject this request?' } do
                %i.fas.fa-times
                %span Reject

    / Desktop Table View - Hidden on Mobile
    .bg-white.rounded-xl.shadow-lg.overflow-hidden.hidden.lg:block
      .overflow-x-auto
        %table.min-w-full.divide-y.divide-gray-200
          %thead{style: "background-color: #e8f0f0;"}
            %tr
              %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Name
              %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Email
              %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Company
              %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Vehicle Count
              %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Contact
              %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Status
              %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Submitted
              %th.px-6.py-3.text-center.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Actions

          %tbody.bg-white.divide-y.divide-gray-200
            - @vendor_requests.each do |request|
              %tr.transition-colors{style: "transition: background-color 0.2s;", onmouseover: "this.style.backgroundColor='#e8f0f0'", onmouseout: "this.style.backgroundColor='white'"}
                %td.px-6.py-4.whitespace-nowrap
                  .text-sm.font-medium.text-gray-900= request.full_name
                %td.px-6.py-4.whitespace-nowrap
                  .text-sm.text-gray-900= request.email
                %td.px-6.py-4.whitespace-nowrap
                  .text-sm.text-gray-900= request.company_name
                %td.px-6.py-4.whitespace-nowrap.text-center
                  .text-sm.font-semibold{style: "color: #3A6363;"}= request.vehicle_count
                %td.px-6.py-4.whitespace-nowrap
                  - if request.phone.present?
                    .text-sm.text-gray-900= request.phone
                  - else
                    %span.text-sm.text-gray-400 N/A
                %td.px-6.py-4.whitespace-nowrap
                  - case request.status
                  - when 'pending'
                    %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-semibold.bg-yellow-100.text-yellow-800
                      %i.fas.fa-clock.mr-1
                      Pending
                  - when 'approved'
                    %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-semibold.bg-green-100.text-green-800
                      %i.fas.fa-check.mr-1
                      Approved
                  - when 'rejected'
                    %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-semibold.bg-red-100.text-red-800
                      %i.fas.fa-times.mr-1
                      Rejected
                %td.px-6.py-4.whitespace-nowrap
                  .text-sm.text-gray-500= request.created_at.strftime('%b %d, %Y')
                %td.px-6.py-4.whitespace-nowrap.text-sm.font-medium
                  - if request.pending?
                    .flex.gap-2.justify-center
                      = button_to approve_admin_vendor_request_path(request), method: :patch, class: 'inline-flex items-center gap-1 px-3 py-1.5 bg-green-500 text-white text-xs font-medium rounded-lg hover:bg-green-600 transition-colors', data: { confirm: 'Are you sure you want to approve this request?' } do
                        %i.fas.fa-check
                        %span Approve
                      = button_to reject_admin_vendor_request_path(request), method: :patch, class: 'inline-flex items-center gap-1 px-3 py-1.5 bg-red-500 text-white text-xs font-medium rounded-lg hover:bg-red-600 transition-colors', data: { confirm: 'Are you sure you want to reject this request?' } do
                        %i.fas.fa-times
                        %span Reject
                  - else
                    .text-center
                      %span.text-gray-400.text-xs No actions

    / -------------------- Summary Stats --------------------
    .mt-4.sm:mt-6.grid.grid-cols-1.sm:grid-cols-3.gap-3.sm:gap-4
      .bg-white.rounded-lg.shadow-md.p-4.sm:p-5.text-center.border-l-4.border-yellow-400
        .flex.items-center.justify-center.mb-2
          .w-10.h-10.sm:w-12.sm:h-12.rounded-full.bg-yellow-100.flex.items-center.justify-center
            %i.fas.fa-clock.text-lg.sm:text-xl.text-yellow-600
        .text-2xl.sm:text-3xl.font-bold.text-yellow-600= VendorRequest.pending.count
        .text-xs.sm:text-sm.text-gray-600.mt-1 Pending Requests

      .bg-white.rounded-lg.shadow-md.p-4.sm:p-5.text-center.border-l-4.border-green-400
        .flex.items-center.justify-center.mb-2
          .w-10.h-10.sm:w-12.sm:h-12.rounded-full.bg-green-100.flex.items-center.justify-center
            %i.fas.fa-check.text-lg.sm:text-xl.text-green-600
        .text-2xl.sm:text-3xl.font-bold.text-green-600= VendorRequest.approved.count
        .text-xs.sm:text-sm.text-gray-600.mt-1 Approved Requests

      .bg-white.rounded-lg.shadow-md.p-4.sm:p-5.text-center.border-l-4.border-red-400
        .flex.items-center.justify-center.mb-2
          .w-10.h-10.sm:w-12.sm:h-12.rounded-full.bg-red-100.flex.items-center.justify-center
            %i.fas.fa-times.text-lg.sm:text-xl.text-red-600
        .text-2xl.sm:text-3xl.font-bold.text-red-600= VendorRequest.rejected.count
        .text-xs.sm:text-sm.text-gray-600.mt-1 Rejected Requests
