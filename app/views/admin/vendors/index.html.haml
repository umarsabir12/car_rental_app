.container.mx-auto.px-4.sm:px-6.lg:px-8.py-6.sm:py-8
  .flex.flex-col.sm:flex-row.items-start.sm:items-center.justify-between.mb-6.sm:mb-8.gap-4
    %h1.text-2xl.sm:text-3xl.font-bold{style: "color: #3A6363;"} Vendors
    = link_to download_report_admin_vendors_path(format: :csv), class: "inline-flex items-center px-4 py-2 rounded-md transition text-white text-sm sm:text-base shadow-md", style: "background-color: #3A6363;", onmouseover: "this.style.backgroundColor='#2d4d4d'", onmouseout: "this.style.backgroundColor='#3A6363'" do
      %i.fas.fa-download.mr-2
      %span Download Report

  / Filters and Search
  .bg-white.rounded-lg.shadow-md.p-4.sm:p-6.mb-6.sm:mb-8
    = form_with url: admin_vendors_path, method: :get, local: true, class: 'space-y-4' do |f|
      .grid.grid-cols-1.sm:grid-cols-2.md:grid-cols-4.gap-3.sm:gap-4
        .field
          = f.label :company_name, 'Company Name', class: 'block text-xs sm:text-sm font-medium text-gray-700 mb-1 sm:mb-2'
          = f.text_field :company_name, value: params[:company_name], placeholder: 'Company name', class: 'w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-2 focus:border-transparent', style: 'transition: all 0.2s;', onfocus: "this.style.borderColor='#3A6363'; this.style.boxShadow='0 0 0 3px rgba(58, 99, 99, 0.1)'", onblur: "this.style.borderColor='#d1d5db'; this.style.boxShadow='none'"

        .field
          = f.label :email, 'Email', class: 'block text-xs sm:text-sm font-medium text-gray-700 mb-1 sm:mb-2'
          = f.text_field :email, value: params[:email], placeholder: 'Vendor email', class: 'w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-2 focus:border-transparent', style: 'transition: all 0.2s;', onfocus: "this.style.borderColor='#3A6363'; this.style.boxShadow='0 0 0 3px rgba(58, 99, 99, 0.1)'", onblur: "this.style.borderColor='#d1d5db'; this.style.boxShadow='none'"

        .field
          = f.label :phone, 'Phone', class: 'block text-xs sm:text-sm font-medium text-gray-700 mb-1 sm:mb-2'
          = f.text_field :phone, value: params[:phone], placeholder: 'Phone number', class: 'w-full px-3 py-2 text-sm border border-gray-300 rounded-md focus:ring-2 focus:border-transparent', style: 'transition: all 0.2s;', onfocus: "this.style.borderColor='#3A6363'; this.style.boxShadow='0 0 0 3px rgba(58, 99, 99, 0.1)'", onblur: "this.style.borderColor='#d1d5db'; this.style.boxShadow='none'"

        .field.flex.items-end.gap-2.col-span-1.sm:col-span-2.md:col-span-1
          = f.submit 'Filter', class: 'flex-1 sm:flex-none px-4 py-2 text-white rounded-md transition text-sm shadow-md text-center', style: 'background-color: #3A6363;', onmouseover: "this.style.backgroundColor='#2d4d4d'", onmouseout: "this.style.backgroundColor='#3A6363'"
          = link_to 'Clear', admin_vendors_path, class: 'flex-1 sm:flex-none bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-md transition text-sm shadow-md text-center'

  / Mobile Card View - Hidden on Desktop
  .block.md:hidden.space-y-4.mb-6
    - @vendors.each_with_index do |vendor, index|
      .bg-white.rounded-lg.shadow-md.p-4.border-l-4{style: "border-color: #3A6363;"}
        .flex.justify-between.items-start.mb-3
          %div
            %h3.text-lg.font-bold.text-gray-900
              = vendor.company_name || 'N/A'
            %p.text-sm.text-gray-600
              = vendor.full_name || 'N/A'
          = link_to admin_vendor_path(vendor), class: 'text-white px-3 py-1.5 rounded-md text-sm', style: 'background-color: #3A6363;' do
            %i.fas.fa-eye

        .space-y-2
          .flex.justify-between.items-center.py-2.border-b.border-gray-100
            %span.text-xs.font-medium.text-gray-500 Email
            %span.text-sm.text-gray-900= vendor.email

          .flex.justify-between.items-center.py-2.border-b.border-gray-100
            %span.text-xs.font-medium.text-gray-500 Phone
            %span.text-sm.text-gray-900= vendor.phone || 'N/A'

          .flex.justify-between.items-center.py-2.border-b.border-gray-100
            %span.text-xs.font-medium.text-gray-500 Website
            %span.text-sm.text-gray-900= vendor.website || 'No website'

          .flex.justify-between.items-center.py-2
            %span.text-xs.font-medium.text-gray-500 Status
            %div
              - status = vendor.active_for_authentication? ? 'Active' : 'Inactive'
              %span.inline-flex.items-center.px-2.py-1.rounded-full.text-xs.font-medium{class: status == 'Active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'}
                = status

  / Desktop Table View - Hidden on Mobile
  .bg-white.rounded-lg.shadow-md.overflow-hidden.hidden.md:block
    .overflow-x-auto
      %table.min-w-full.divide-y.divide-gray-200
        %thead{style: "background-color: #e8f0f0;"}
          %tr
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} #
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Company
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Contact Person
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Email
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Phone
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Status
            %th.px-6.py-3.text-left.text-xs.font-medium.uppercase.tracking-wider{style: "color: #3A6363;"} Actions
        %tbody.bg-white.divide-y.divide-gray-200
          - @vendors.each_with_index do |vendor, index|
            %tr.transition-colors{style: "transition: background-color 0.2s;", onmouseover: "this.style.backgroundColor='#e8f0f0'", onmouseout: "this.style.backgroundColor='white'"}
              %td.px-6.py-4.whitespace-nowrap.text-sm.font-medium.text-gray-900= index + 1
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900
                .flex.flex-col
                  %span.font-medium= vendor.company_name || 'N/A'
                  %span.text-xs.text-gray-500= vendor.website || 'No website'
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900= vendor.full_name || 'N/A'
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900= vendor.email
              %td.px-6.py-4.whitespace-nowrap.text-sm.text-gray-900= vendor.phone || 'N/A'
              %td.px-6.py-4.whitespace-nowrap
                - status = vendor.active_for_authentication? ? 'Active' : 'Inactive'
                %span.inline-flex.items-center.px-2.5.py-0.5.rounded-full.text-xs.font-medium{class: status == 'Active' ? 'bg-green-100 text-green-800' : 'bg-gray-100 text-gray-800'}
                  = status
              %td.px-6.py-4.whitespace-nowrap.text-sm.font-medium
                = link_to admin_vendor_path(vendor), class: 'transition-colors', style: 'color: #3A6363;', onmouseover: "this.style.color='#2d4d4d'", onmouseout: "this.style.color='#3A6363'" do
                  %i.fas.fa-eye

    / Pagination
    - if @vendors.respond_to?(:current_page)
      .bg-white.px-4.py-3.border-t{style: "border-color: #e8f0f0;"}
        .flex.items-center.justify-between
          .flex-1.flex.justify-between.md:hidden
            - if @vendors.prev_page
              = link_to 'Previous', admin_vendors_path(page: @vendors.prev_page), class: 'relative inline-flex items-center px-4 py-2 border text-sm font-medium rounded-md text-white transition-colors', style: 'background-color: #3A6363; border-color: #3A6363;', onmouseover: "this.style.backgroundColor='#2d4d4d'; this.style.borderColor='#2d4d4d'", onmouseout: "this.style.backgroundColor='#3A6363'; this.style.borderColor='#3A6363'"
            - if @vendors.next_page
              = link_to 'Next', admin_vendors_path(page: @vendors.next_page), class: 'ml-3 relative inline-flex items-center px-4 py-2 border text-sm font-medium rounded-md text-white transition-colors', style: 'background-color: #3A6363; border-color: #3A6363;', onmouseover: "this.style.backgroundColor='#2d4d4d'; this.style.borderColor='#2d4d4d'", onmouseout: "this.style.backgroundColor='#3A6363'; this.style.borderColor='#3A6363'"
          .hidden.md:flex-1.md:flex.md:items-center.md:justify-between
            %div
              %p.text-sm.text-gray-700
                Showing
                %span.font-medium{style: "color: #3A6363;"}= @vendors.offset_value + 1
                to
                %span.font-medium{style: "color: #3A6363;"}= @vendors.offset_value + @vendors.length
                of
                %span.font-medium{style: "color: #3A6363;"}= @vendors.total_count
                results
            %div
              .relative.z-0.inline-flex.shadow-sm.rounded-md
                - if @vendors.prev_page
                  = link_to admin_vendors_path(page: @vendors.prev_page), class: 'relative inline-flex items-center px-2 py-2 rounded-l-md border bg-white text-sm font-medium transition-colors', style: 'color: #3A6363; border-color: #e8f0f0;', onmouseover: "this.style.backgroundColor='#e8f0f0'", onmouseout: "this.style.backgroundColor='white'" do
                    %i.fas.fa-chevron-left
                - if @vendors.next_page
                  = link_to admin_vendors_path(page: @vendors.next_page), class: 'relative inline-flex items-center px-2 py-2 rounded-r-md border bg-white text-sm font-medium transition-colors', style: 'color: #3A6363; border-color: #e8f0f0;', onmouseover: "this.style.backgroundColor='#e8f0f0'", onmouseout: "this.style.backgroundColor='white'" do
                    %i.fas.fa-chevron-right

  - if @vendors.empty?
    .text-center.py-12
      .text-gray-500
        %i.fas.fa-building.text-3xl.sm:text-4xl.mb-4
        %p.text-base.sm:text-lg.font-medium No vendors found
        %p.text-xs.sm:text-sm Try adjusting your search or filter criteria
