-# Admin Invite Vendor Page
.container.mx-auto.px-4.py-8.max-w-xl
  .bg-white.shadow-lg.rounded-xl.overflow-hidden.p-8
    %h1.text-3xl.font-extrabold.text-blue-900.mb-6 Invite Vendor
    - if flash[:alert]
      .mb-4.p-3.bg-red-100.text-red-700.rounded= flash[:alert]
    = form_for @vendor, url: create_invite_admin_vendors_path, method: :post, local: true do |f|
      .mb-4
        = f.label :email, class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.email_field :email, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400', required: true
      .mb-4
        = f.label :first_name, class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.text_field :first_name, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400', required: true
      .mb-4
        = f.label :last_name, class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.text_field :last_name, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400', required: true
      .mb-4
        = f.label :password, class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.password_field :password, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400', required: true
      .mb-4
        = f.label :company_name, class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.text_field :company_name, class: 'w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-400 focus:border-blue-400', required: true
      .flex.justify-end.mt-6
        = f.submit 'Send Invite', class: 'bg-green-600 hover:bg-green-700 text-white font-bold px-6 py-2 rounded-lg shadow transition' 