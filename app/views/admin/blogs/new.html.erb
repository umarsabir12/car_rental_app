<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-6 sm:py-8">
  <div class="mb-6">
    <%= link_to admin_blogs_path, class: "inline-flex items-center text-sm mb-4 transition-colors", style: "color: #3A6363;", onmouseover: "this.style.color='#2d4d4d'", onmouseout: "this.style.color='#3A6363'" do %>
      <i class="fas fa-arrow-left mr-2"></i> Back to Blogs
    <% end %>
    <h1 class="text-2xl sm:text-3xl font-bold" style="color: #3A6363;">Add New Blog</h1>
  </div>

  <div class="bg-white rounded-lg shadow-md p-6 sm:p-8">
    <%= render "form", blog: @blog %>
  </div>
</div>
