- if params[:category].present? || params[:model].present? || params[:brand].present?
  .mb-6.p-4.rounded-lg.border{style: 'background-color: #f0f6f6; border-color: #cfe5e5'}
    .flex.items-center.justify-between.flex-wrap.gap-4
      .flex.items-center.gap-2.flex-wrap
        %i.fas.fa-filter.mr-2{style: 'color: #3a6363'}
        %span.text-sm.font-medium{style: 'color: #2d4f4f'}
          Showing
          %span.font-bold= @cars.count
          %span= "car#{@cars.count == 1 ? '' : 's'}"
          filtered by:

        / Show active filters as badges
        .flex.gap-2.flex-wrap
          - if params[:category].present?
            %span.inline-block.px-3.py-1.rounded-full.text-xs.font-semibold.text-white{style: 'background-color: #3a6363'}
              = "Category: #{params[:category].capitalize}"

          - if params[:brand].present?
            %span.inline-block.px-3.py-1.rounded-full.text-xs.font-semibold.text-white{style: 'background-color: #3a6363'}
              = "Brand: #{params[:brand].capitalize}"

          - if params[:model].present?
            %span.inline-block.px-3.py-1.rounded-full.text-xs.font-semibold.text-white{style: 'background-color: #3a6363'}
              = "Model: #{params[:model].capitalize}"

      = link_to 'Clear All Filters', cars_path, class: 'text-sm font-semibold underline transition-all duration-300', style: 'color: #3a6363'