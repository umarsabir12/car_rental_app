%style
  :css
    .blog-content {
      p {
        margin-bottom: 1.5rem;
        line-height: 1.8;
        color: #333;
        font-size: 1.125rem;
      }

      h2, h3, h4, h5, h6 {
        margin-top: 2rem;
        margin-bottom: 1rem;
        font-weight: 700;
        color: #1a1a1a;
      }

      h2 {
        font-size: 1.875rem;
        color: #3A6363;
        border-bottom: 3px solid #3A6363;
        padding-bottom: 0.75rem;
      }

      h3 {
        font-size: 1.5rem;
        color: #3A6363;
      }

      h4 {
        font-size: 1.3rem;
        color: #3A6363;
      }

      strong {
        font-weight: 700;
        color: #1a1a1a;
      }

      em {
        font-style: italic;
      }

      ul, ol {
        margin-left: 2rem;
        margin-bottom: 1.5rem;

        li {
          margin-bottom: 0.75rem;
          line-height: 1.8;
          color: #333;
          font-size: 1.125rem;
          list-style-type: disc;

          &:last-child {
            margin-bottom: 0;
          }
        }
      }

      blockquote {
        border-left: 5px solid #3A6363;
        padding-left: 1.5rem;
        padding: 1.5rem;
        margin: 1.5rem 0;
        font-style: italic;
        color: #555;
        background-color: #f9f9f9;
        border-radius: 4px;

        p {
          margin: 0;
        }
      }

      a {
        color: #3A6363;
        font-weight: 500;
        text-decoration: underline;
        transition: color 0.3s ease;

        &:hover {
          color: #2a4a4a;
        }
      }

      img {
        max-width: 100%;
        height: auto;
        border-radius: 8px;
        margin: 1.5rem 0;
        display: block;
      }

      hr {
        border: none;
        border-top: 2px solid #e5e5e5;
        margin: 2.5rem 0;
      }

      table {
        width: 100%;
        border-collapse: collapse;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        margin: 2rem 0;

        thead {
          background-color: #3A6363;
        }

        th {
          padding: 1rem;
          text-align: left;
          color: white;
          font-weight: 700;
          border: 1px solid #2a4a4a;
          font-size: 1rem;

          &:text-align(center) {
            text-align: center;
          }
        }

        td {
          padding: 1rem;
          border: 1px solid #e5e5e5;
          color: #333;
        }

        tbody tr:nth-child(odd) {
          background-color: #f9f9f9;
        }

        tbody tr:nth-child(even) {
          background-color: #ffffff;
        }
      }

      div {
        &.blog-wrapper {
          max-width: 900px;
          margin: 0 auto;
          padding: 20px;
        }
      }
    }
