%div.min-h-screen.bg-white.py-5

  / HERO IMAGE SECTION
  - if @blog.featured_image.attached?
    %section.relative.h-96.w-full.overflow-hidden.bg-gray-200
      %img.w-full.h-full.object-cover{src: url_for(@blog.featured_image), alt: @blog.title}
      .absolute.inset-0.bg-gradient-to-b.from-transparent.via-transparent.to-white

  / MAIN CONTENT WRAPPER
  .max-w-4xl.mx-auto.px-4.sm:px-6.lg:px-8.py-12

    / BREADCRUMB
    .mb-8.flex.items-center.gap-2.text-sm.text-gray-600
      = link_to 'Blog', blogs_path, class: 'hover:text-gray-900 transition-colors'
      %span /
      %span= @blog.category
      %span /
      %span.text-gray-900.font-medium= @blog.title

    / BLOG HEADER
    .mb-8
      / CATEGORY BADGE
      %span.inline-block.px-4.py-2.rounded-full.text-sm.font-semibold.text-white.mb-4{style: "background-color: #3A6363;"}
        = @blog.category

      / TITLE
      %h1.text-5xl.font-bold.mb-6{style: "color: #1a1a1a; line-height: 1.2;"}
        = @blog.title

      / META INFO
      .flex.flex-wrap.items-center.gap-6.text-gray-600.mb-8
        .flex.items-center.gap-2
          %i.far.fa-user
          %span= @blog.author_name

        .flex.items-center.gap-2
          %i.far.fa-calendar
          %span= @blog.published_at.strftime('%B %d, %Y')

        .flex.items-center.gap-2
          %i.far.fa-clock
          %span
            - word_count = @blog.content.split.length
            - reading_time = (word_count / 200.0).ceil
            = "#{reading_time} min read"

    / DIVIDER
    %hr.my-8{style: "border-color: #e5e5e5;"}

    / SOCIAL SHARE TOP
    .mb-8.flex.items-center.gap-4.pb-8.border-b{style: "border-color: #e5e5e5;"}
      %span.text-gray-600.font-semibold Share:
      %a.w-10.h-10.rounded-full.flex.items-center.justify-center.transition-all.duration-300.hover:scale-110{href: "https://www.facebook.com/sharer/sharer.php?u=#{blog_url(@blog)}", target: "_blank", rel: "noopener noreferrer", style: "background-color: #3A6363; color: white;", title: "Share on Facebook"}
        %i.fab.fa-facebook-f
      %a.w-10.h-10.rounded-full.flex.items-center.justify-center.transition-all.duration-300.hover:scale-110{href: "https://twitter.com/intent/tweet?url=#{blog_url(@blog)}&text=#{@blog.title}", target: "_blank", rel: "noopener noreferrer", style: "background-color: #3A6363; color: white;", title: "Share on Twitter"}
        %i.fab.fa-twitter
      %a.w-10.h-10.rounded-full.flex.items-center.justify-center.transition-all.duration-300.hover:scale-110{href: "https://www.linkedin.com/sharing/share-offsite/?url=#{blog_url(@blog)}", target: "_blank", rel: "noopener noreferrer", style: "background-color: #3A6363; color: white;", title: "Share on LinkedIn"}
        %i.fab.fa-linkedin-in
      %a.w-10.h-10.rounded-full.flex.items-center.justify-center.transition-all.duration-300.hover:scale-110{href: "mailto:?subject=#{@blog.title}&body=#{blog_url(@blog)}", style: "background-color: #3A6363; color: white;", title: "Share via Email"}
        %i.far.fa-envelope

    / BLOG CONTENT
    .prose.prose-lg.max-w-none.mb-12
      .blog-content
        = sanitize(@blog.content, tags: %w(p br strong em u h2 h3 h4 h5 h6 ul ol li blockquote a img div hr table thead tbody tr th td), 
                                  attributes: %w(href src alt title id class style width height colspan rowspan))

    / DIVIDER
    %hr.my-12{style: "border-color: #e5e5e5;"}

    / AUTHOR BIO SECTION
    .bg-gray-50.rounded-lg.p-8.mb-12
      .flex.gap-4
        / AUTHOR AVATAR
        .flex-shrink-0
          .w-16.h-16.rounded-full.bg-gradient-to-br{style: "background: linear-gradient(135deg, #3A6363 0%, #2a4a4a 100%);"}
            .w-full.h-full.flex.items-center.justify-center.text-white.font-bold.text-xl
              = @blog.author_name.chars.first

        / AUTHOR INFO
        .flex-grow
          %h4.text-xl.font-bold.mb-2{style: "color: #3A6363;"}
            = @blog.author_name
          %p.text-gray-600.mb-3
            Expert contributor at WheelsOnRent with extensive knowledge of car rentals and travel tips.

    / RELATED POSTS SECTION
    - related_posts = Blog.published.where("id != ? AND category = ?", @blog.id, @blog.category).order(published_at: :desc).limit(3)
    - if related_posts.any?
      .mb-12
        %h3.text-3xl.font-bold.mb-8{style: "color: #1a1a1a;"}
          More in
          %span{style: "color: #3A6363;"}
            = " #{@blog.category}"
        
        .grid.grid-cols-1.md:grid-cols-3.gap-8
          - related_posts.each do |post|
            = link_to blog_path(post), class: 'group cursor-pointer' do
              .rounded-lg.overflow-hidden.shadow-md.hover:shadow-xl.transition-all.duration-300.hover:-translate-y-1
                / IMAGE
                .relative.h-40.bg-gray-200.overflow-hidden
                  - if post.featured_image.attached?
                    %img.w-full.h-full.object-cover.group-hover:scale-105.transition-transform.duration-300{src: url_for(post.featured_image), alt: post.title}

                / CONTENT
                .p-4
                  %span.inline-block.text-xs.font-semibold.text-white.px-2.py-1.rounded-full.mb-2{style: "background-color: #3A6363;"}
                    = post.category
                  %h4.font-bold.text-gray-900.line-clamp-2.mb-2.group-hover:text-gray-700.transition-colors
                    = post.title
                  %p.text-sm.text-gray-600
                    = post.published_at.strftime('%b %d, %Y')

    / NAVIGATION BUTTONS
    .flex.gap-4.justify-between.items-center.py-8.border-t{style: "border-color: #e5e5e5;"}
      - previous_post = Blog.published.where("category = ? AND published_at > ?", @blog.category, @blog.published_at).order(published_at: :asc).first
      - next_post = Blog.published.where("category = ? AND published_at < ?", @blog.category, @blog.published_at).order(published_at: :desc).first

      - if previous_post
        = link_to blog_path(previous_post), class: 'flex.items-center.gap-2.px-4.py-2.rounded-lg.transition-all.duration-300.hover:gap-4', style: 'color: #3A6363; border: 2px solid #3A6363;' do
          %i.fas.fa-arrow-left
          %span Previous
      - else
        %span

      - if next_post
        = link_to blog_path(next_post), class: 'flex.items-center.gap-2.px-4.py-2.rounded-lg.transition-all.duration-300.hover:gap-4', style: 'background-color: #3A6363; color: white;' do
          %span Next
          %i.fas.fa-arrow-right
      - else
        %span

    / BACK TO BLOG LINK
    .text-center.py-8
      = link_to blogs_path, class: 'inline-flex.items-center.gap-2.text-lg.font-semibold.transition-all.duration-300.hover:gap-4', style: 'color: #3A6363;' do
        %i.fas.fa-arrow-left
        %span Back to Blogs

