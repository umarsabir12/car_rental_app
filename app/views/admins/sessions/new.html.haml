%html{ lang: "en" }
  %head
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %title WheelsOnRent - Admin Login
    %script{ src: "https://cdn.tailwindcss.com" }
    %style
      :css
        body {
          background: linear-gradient(135deg, #2d4d4d 0%, #3A6363 25%, #5a8a8a 50%, #7fb3b3 75%, #a8d5d5 100%);
          background-size: 400% 400%;
          animation: gradientShift 15s ease infinite;
        }
        @keyframes gradientShift {
          0% { background-position: 0% 50%; }
          50% { background-position: 100% 50%; }
          100% { background-position: 0% 50%; }
        }
        .logo-glow {
          filter: drop-shadow(0 0 10px rgba(58, 99, 99, 0.3));
        }
  %body.min-h-screen.flex.items-center.justify-center.px-3.sm:px-4.py-6.sm:py-8
    .w-full.max-w-md
      / Logo and Company Name
      .text-center.mb-6.sm:mb-8
        = image_tag "new_logo.png", alt: "WheelsOnRent Logo", class: "mx-auto h-12 sm:h-14 lg:h-16 w-auto mb-3 sm:mb-4 logo-glow"
        %h1.text-2xl.sm:text-3xl.lg:text-4xl.font-extrabold.mb-1.sm:mb-2{style: "color: #ffffff; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"}
          WheelsOnRent
        %p.text-sm.sm:text-base.font-medium{style: "color: #e8f0f0;"} Admin Portal

      / Login Card
      .bg-white.rounded-xl.sm:rounded-2xl.shadow-2xl.p-5.sm:p-6.lg:p-8{style: "backdrop-filter: blur(10px); background: rgba(255, 255, 255, 0.98);"}
        %h2.text-lg.sm:text-xl.font-bold.mb-5.sm:mb-6.text-center{style: "color: #3A6363;"} Admin Login
        = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
          - if resource.errors.any?
            .mb-4.sm:mb-5.border-l-4.rounded-r.p-3.sm:p-4{style: "background-color: #fee; border-color: #dc3545;"}
              %ul.list-disc.pl-5.space-y-1{style: "color: #dc3545;"}
                - resource.errors.full_messages.each do |msg|
                  %li.text-sm= msg
          .mb-4.sm:mb-5
            = f.label :email, class: "block text-sm font-semibold mb-1.sm:mb-2", style: "color: #3A6363;"
            = f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3.sm:px-4 py-2 sm:py-2.5 border rounded-lg focus:outline-none focus:ring-2", placeholder: "Enter your email", style: "border-color: #d1d5db; focus:ring-color: #3A6363; focus:border-color: #3A6363;"
          .mb-5.sm:mb-6
            = f.label :password, class: "block text-sm font-semibold mb-1.sm:mb-2", style: "color: #3A6363;"
            = f.password_field :password, autocomplete: "current-password", class: "w-full px-3.sm:px-4 py-2 sm:py-2.5 border rounded-lg focus:outline-none focus:ring-2", placeholder: "Enter your password", style: "border-color: #d1d5db; focus:ring-color: #3A6363; focus:border-color: #3A6363;"
          .flex.flex-col.sm:flex-row.items-start.sm:items-center.justify-between.gap-3.sm:gap-4.mb-5.sm:mb-6
            .flex.items-center
              = f.check_box :remember_me, class: "mr-2 rounded", style: "color: #3A6363; focus:ring-color: #3A6363;"
              = f.label :remember_me, class: "text-sm", style: "color: #3A6363;"
            = link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm transition-colors", style: "color: #3A6363;", onmouseover: "this.style.color='#2d4d4d'", onmouseout: "this.style.color='#3A6363'"
          = f.submit "Log in", class: "w-full text-white font-bold py-2.5 sm:py-3 rounded-lg shadow transition-colors cursor-pointer", style: "background-color: #3A6363;", onmouseover: "this.style.backgroundColor='#2d4d4d'", onmouseout: "this.style.backgroundColor='#3A6363'"