.container.mx-auto.px-3.sm:px-4.lg:px-6.py-4.sm:py-6.lg:py-8
  .max-w-4xl.mx-auto
    .flex.flex-col.sm:flex-row.items-start.sm:items-center.justify-between.gap-3.sm:gap-4.mb-4.sm:mb-6.lg:mb-8
      %h1.text-xl.sm:text-2xl.lg:text-3xl.font-bold{style: "color: #3A6363;"} My Profile
      = link_to edit_admins_path, class: "text-white px-4 py-2 rounded-lg font-medium transition-colors duration-200 flex items-center w-full sm:w-auto justify-center", style: "background-color: #3A6363;", onmouseover: "this.style.backgroundColor='#2d4d4d'", onmouseout: "this.style.backgroundColor='#3A6363'" do
        %i.fas.fa-edit.mr-2
        Edit Profile

    .grid.grid-cols-1.lg:grid-cols-3.gap-4.sm:gap-6.lg:gap-8
      .lg:col-span-2
        .bg-white.rounded-lg.shadow-md.p-4.sm:p-5.lg:p-6
          %h2.text-lg.sm:text-xl.font-semibold.mb-4.sm:mb-5.lg:mb-6{style: "color: #3A6363;"} Personal Information

          .grid.grid-cols-1.sm:grid-cols-2.gap-4.sm:gap-5.lg:gap-6
            .field
              %label.text-xs.sm:text-sm.font-medium.text-gray-500 First Name
              %p.text-base.sm:text-lg.text-gray-900.mt-1= @admin.first_name

            .field
              %label.text-xs.sm:text-sm.font-medium.text-gray-500 Last Name
              %p.text-base.sm:text-lg.text-gray-900.mt-1= @admin.last_name

            .field.sm:col-span-2
              %label.text-xs.sm:text-sm.font-medium.text-gray-500 Email
              %p.text-base.sm:text-lg.text-gray-900.mt-1.break-all= @admin.email

            .field
              %label.text-xs.sm:text-sm.font-medium.text-gray-500 Role
              .mt-1
                - if @admin.super_admin?
                  %span.inline-flex.items-center.px-3.py-1.rounded-full.text-xs.sm:text-sm.font-medium{style: "background-color: #e8f0f0; color: #3A6363;"}
                    %i.fas.fa-crown.mr-1
                    Super Admin
                - else
                  %span.inline-flex.items-center.px-3.py-1.rounded-full.text-xs.sm:text-sm.font-medium{style: "background-color: #e8f0f0; color: #3A6363;"}
                    %i.fas.fa-user-shield.mr-1
                    Admin

            .field
              %label.text-xs.sm:text-sm.font-medium.text-gray-500 Created At
              %p.text-sm.sm:text-base.lg:text-lg.text-gray-900.mt-1= @admin.created_at.strftime("%B %d, %Y at %I:%M %p")

            .field.sm:col-span-2
              %label.text-xs.sm:text-sm.font-medium.text-gray-500 Last Updated
              %p.text-sm.sm:text-base.lg:text-lg.text-gray-900.mt-1= @admin.updated_at.strftime("%B %d, %Y at %I:%M %p")

        .bg-white.rounded-lg.shadow-md.p-4.sm:p-5.lg:p-6.mt-4.sm:mt-5.lg:mt-6
          %h2.text-lg.sm:text-xl.font-semibold.mb-4.sm:mb-5.lg:mb-6{style: "color: #3A6363;"} Permissions

          .space-y-3.sm:space-y-4
            .flex.items-center.justify-between.p-3.sm:p-4.rounded-lg{style: "background-color: #e8f0f0;"}
              .flex.items-center
                %i.fas.fa-users.mr-2.sm:mr-3{style: "color: #3A6363;"}
                .text-xs.sm:text-sm.font-medium.text-gray-900 Manage Users
              %span{style: "color: #28a745;"}
                %i.fas.fa-check

            .flex.items-center.justify-between.p-3.sm:p-4.rounded-lg{style: "background-color: #e8f0f0;"}
              .flex.items-center
                %i.fas.fa-car.mr-2.sm:mr-3{style: "color: #3A6363;"}
                .text-xs.sm:text-sm.font-medium.text-gray-900 Manage Vehicles
              %span{style: "color: #28a745;"}
                %i.fas.fa-check

            .flex.items-center.justify-between.p-3.sm:p-4.rounded-lg{style: "background-color: #e8f0f0;"}
              .flex.items-center
                %i.fas.fa-calendar-check.mr-2.sm:mr-3{style: "color: #3A6363;"}
                .text-xs.sm:text-sm.font-medium.text-gray-900 Manage Bookings
              %span{style: "color: #28a745;"}
                %i.fas.fa-check

            .flex.items-center.justify-between.p-3.sm:p-4.rounded-lg{style: "background-color: #e8f0f0;"}
              .flex.items-center
                %i.fas.fa-store.mr-2.sm:mr-3{style: "color: #3A6363;"}
                .text-xs.sm:text-sm.font-medium.text-gray-900 Manage Vendors
              %span{style: "color: #28a745;"}
                %i.fas.fa-check

            .flex.items-center.justify-between.p-3.sm:p-4.rounded-lg{style: "background-color: #e8f0f0;"}
              .flex.items-center
                %i.fas.fa-user-plus.mr-2.sm:mr-3{style: "color: #3A6363;"}
                .text-xs.sm:text-sm.font-medium.text-gray-900 Create Admins
              - if @admin.super_admin?
                %span{style: "color: #28a745;"}
                  %i.fas.fa-check
              - else
                %span.text-gray-400
                  %i.fas.fa-times

      .lg:col-span-1
        .bg-white.rounded-lg.shadow-md.p-4.sm:p-5.lg:p-6
          %h2.text-lg.sm:text-xl.font-semibold.mb-4.sm:mb-5.lg:mb-6{style: "color: #3A6363;"} Quick Actions

          .space-y-3.sm:space-y-4
            = link_to edit_admins_path, class: "w-full flex items-center justify-center px-4 py-2 sm:py-2.5 border border-transparent rounded-md shadow-sm text-sm font-medium text-white transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2", style: "background-color: #3A6363; focus:ring-color: #3A6363;", onmouseover: "this.style.backgroundColor='#2d4d4d'", onmouseout: "this.style.backgroundColor='#3A6363'" do
              %i.fas.fa-edit.mr-2
              Edit Profile

            = link_to admin_dashboard_index_path, class: "w-full flex items-center justify-center px-4 py-2 sm:py-2.5 rounded-md shadow-sm text-sm font-medium text-gray-700 bg-white transition-colors focus:outline-none focus:ring-2 focus:ring-offset-2", style: "border: 1px solid #3A6363; focus:ring-color: #3A6363;", onmouseover: "this.style.backgroundColor='#e8f0f0'", onmouseout: "this.style.backgroundColor='white'" do
              %i.fas.fa-tachometer-alt.mr-2
              Back to Dashboard 