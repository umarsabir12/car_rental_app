%section.py-20.px-4.sm:px-6.lg:px-8.bg-white
  .max-w-7xl.mx-auto
    .text-center.mb-16
      %h2.text-4xl.md:text-5xl.font-bold.text-gray-900.mb-4
        Why Join WheelsOnRent?

    .grid.grid-cols-1.md:grid-cols-2.lg:grid-cols-3.gap-6
      - @why_join_items.each_with_index do |item, index|
        .bg-white.p-8.rounded-xl.shadow-md.hover:shadow-lg.transition-shadow.text-center
          .w-12.h-12.rounded-full.flex.items-center.justify-center.mx-auto.mb-4{style: "background-color: #00B4D8"}
            %span.text-white.font-bold.text-lg= index + 1
          %h3.text-lg.font-bold.text-gray-900.mb-3
            = item[:title]
          %p.text-gray-600.text-sm
            = item[:desc]

