.container.mx-auto.max-w-container.p-6
  = render partial: "vendors/navbar"
  .flex.items-center.gap-4.mb-10
    %h1.text-2xl.font-bold.text-blue-900.pl-4.border-l-4.border-blue-600.bg-white.rounded My Cars
    = link_to new_vendors_car_path, class: 'ml-auto flex items-center gap-2 border border-blue-600 text-blue-700 font-semibold px-4 py-2 rounded-lg bg-transparent hover:bg-blue-50 transition' do
      %i.fas.fa-plus
      Add New Car
  - if @cars.any?
    .grid.grid-cols-1.md:grid-cols-2.lg:grid-cols-3.gap-6
      - @cars.each do |car|
        = link_to vendors_car_path(car), class: 'block bg-white rounded-xl shadow-md p-3 hover:shadow-lg transition cursor-pointer focus:outline-none focus:ring-2 focus:ring-blue-400' do
          - if car.images.attached?
            %img.w-full.h-36.object-cover.rounded.mb-3{src: url_for(car.images.first), alt: car.model}
          - else
            %div.w-full.h-36.bg-blue-50.flex.items-center.justify-center.rounded.mb-3
              %i.fas.fa-car.text-3xl.text-blue-300
          %div.font-semibold.text-blue-900.text-lg= car.model
          %div.text-gray-600= car.brand
          %div.text-gray-500.text-sm= car.year
  - else
    %p.text-gray-500.mt-4 You have not added any cars yet. 