.container.mx-auto.max-w-md.p-6
  .bg-white.rounded-xl.shadow-lg.overflow-hidden.p-8.mt-10
    .text-center.mb-8
      %i{class: 'fas fa-store text-4xl mb-4', style: 'color: #3a6363'}
      %h2.text-3xl.font-bold.text-gray-800.mb-2 Vendor Sign In
      %p.text-gray-600 Sign in to manage your cars and bookings
    
    = form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "space-y-6" }) do |f|
      .field.space-y-2
        = f.label :email, class: "block text-sm font-medium text-gray-700"
        = f.email_field :email, 
          autofocus: true, 
          autocomplete: "email",
          class: "w-full px-4 py-3 rounded-lg border border-gray-300 transition duration-200",
          placeholder: "your@email.com",
          onfocus: "this.style.borderColor='#3a6363'; this.style.boxShadow='0 0 0 3px rgba(58, 99, 99, 0.1)'",
          onblur: "this.style.borderColor='#d1d5db'; this.style.boxShadow='none'"

      .field.space-y-2
        = f.label :password, class: "block text-sm font-medium text-gray-700"
        .relative
          = f.password_field :password, 
            autocomplete: "current-password",
            class: "w-full px-4 py-3 pr-12 rounded-lg border border-gray-300 transition duration-200",
            placeholder: "••••••••",
            onfocus: "this.style.borderColor='#3a6363'; this.style.boxShadow='0 0 0 3px rgba(58, 99, 99, 0.1)'",
            onblur: "this.style.borderColor='#d1d5db'; this.style.boxShadow='none'"
          %button.absolute.right-3.top-3.text-gray-400.hover:text-gray-600.transition{type: "button", onclick: "togglePassword(this)"}
            %i.fas.fa-eye

      - if devise_mapping.rememberable?
        .field.flex.items-center
          = f.check_box :remember_me, 
            class: "h-4 w-4 border-gray-300 rounded transition",
            style: "color: #3a6363; focus:ring-color: #3a6363",
            onchange: "this.style.accentColor='#3a6363'"
          = f.label :remember_me, class: "ml-2 block text-sm text-gray-700"

      .actions
        = f.submit "Log in", 
          class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white transition duration-200 hover:shadow-md",
          style: "background-color: #3a6363; hover:background-color: #2d4d4d"

    / Divider
    .relative.my-6
      .absolute.inset-0.flex.items-center
        .w-full{style: 'border-top: 1px solid #e5e7eb'}
      .relative.flex.justify-center.text-sm
        %span.px-3.bg-white.text-gray-500 Or continue with

    / Google Sign In Button for Vendors
    = button_to vendor_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, 
        class: "w-full flex items-center justify-center px-4 py-3 border border-gray-300 shadow-sm text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 transition duration-200",
        style: "hover:border-color: #3a6363",
        onmouseover: "this.style.borderColor='#3a6363'; this.style.boxShadow='0 0 0 3px rgba(58, 99, 99, 0.05)'",
        onmouseout: "this.style.borderColor='#d1d5db'; this.style.boxShadow='none'" do
      %svg.w-5.h-5.mr-3{viewBox: "0 0 24 24"}
        %path{fill: "#4285F4", d: "M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"}
        %path{fill: "#34A853", d: "M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"}
        %path{fill: "#FBBC05", d: "M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"}
        %path{fill: "#EA4335", d: "M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"}
      Sign in with Google

    .mt-6.text-center.space-y-4
      = link_to "Forgot your password?", new_password_path(resource_name), 
          class: 'font-medium transition-colors hover:underline',
          style: 'color: #3a6363'
      %p.text-gray-500.text-sm
        Don't have an account? 
        = link_to 'Sign up here', new_registration_path(resource_name), 
            class: 'font-medium transition-colors hover:underline',
            style: 'color: #3a6363'

    - if alert
      .mt-4.p-3.bg-red-50.text-red-700.rounded-lg.text-sm.border.border-red-200= alert
    - if notice
      .mt-4.p-3.text-green-700.rounded-lg.text-sm.border{style: 'background-color: #f0f9f0; border-color: #3a6363'}= notice

:javascript
  function togglePassword(button) {
    const input = button.previousElementSibling
    const icon = button.querySelector('i')
    if (input.type === 'password') {
      input.type = 'text'
      icon.classList.replace('fa-eye', 'fa-eye-slash')
    } else {
      input.type = 'password'
      icon.classList.replace('fa-eye-slash', 'fa-eye')
    }
  }

  // Enhanced styling for form elements
  document.addEventListener('DOMContentLoaded', function() {
    // Style the checkbox with the theme color
    const checkbox = document.querySelector('input[type="checkbox"]');
    if (checkbox) {
      checkbox.style.accentColor = '#3a6363';
    }
  });