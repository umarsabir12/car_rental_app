.container.mx-auto.max-w-7xl.p-4.sm:p-6
  = render partial: "vendors/navbar"

  / Header Section
  .bg-white.rounded-2xl.shadow-xl.p-4.sm:p-6.md:p-8.mb-6.sm:mb-8
    .flex.flex-col.md:flex-row.md:items-center.md:justify-between.gap-4
      .flex-1
        %h1.text-2xl.sm:text-3xl.md:text-4xl.font-extrabold.mb-2{style: 'color: #3a6363'} Payment History
        %p.text-base.sm:text-lg.text-gray-600 Track your earnings and payment history
      .grid.grid-cols-3.sm:flex.gap-2.sm:gap-3.w-full.md:w-auto
        .bg-green-50.rounded-lg.p-2.sm:p-3.md:p-4.text-center
          %div.text-base.sm:text-xl.md:text-2xl.font-bold.text-green-600= number_to_currency(@total_earnings)
          %div.text-xs.sm:text-sm.text-gray-600 Total Earnings
        .bg-blue-50.rounded-lg.p-2.sm:p-3.md:p-4.text-center
          %div.text-base.sm:text-xl.md:text-2xl.font-bold.text-blue-600= number_to_currency(@monthly_earnings)
          %div.text-xs.sm:text-sm.text-gray-600 This Month
        .bg-yellow-50.rounded-lg.p-2.sm:p-3.md:p-4.text-center
          %div.text-base.sm:text-xl.md:text-2xl.font-bold.text-yellow-600= number_to_currency(@pending_payments)
          %div.text-xs.sm:text-sm.text-gray-600 Pending

  / Filters Section
  .bg-white.rounded-xl.shadow-lg.p-4.sm:p-6.mb-6.sm:mb-8
    %h2.text-lg.sm:text-xl.font-bold.mb-3.sm:mb-4.flex.items-center.gap-2{style: 'color: #3a6363'}
      %i.fas.fa-filter{style: 'color:#3A6363'}
      Filter & Search
    = form_with url: vendors_payments_path, method: :get, local: true, class: 'flex flex-col sm:flex-row sm:flex-wrap items-stretch sm:items-end gap-3 sm:gap-4' do |f|
      .field.w-full.sm:flex-1.sm:min-w-48
        = f.label :search, 'Search Customer', class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.text_field :search, value: params[:search], placeholder: 'Name or email...', class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'

      .field.w-full.sm:flex-1.sm:min-w-48
        = f.label :car_id, 'Car', class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.select :car_id, options_from_collection_for_select(@cars, :id, :full_name, params[:car_id]), { prompt: 'All Cars' }, { class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500' }

      .field.w-full.sm:flex-1.sm:min-w-48
        = f.label :status, 'Status', class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.select :status, options_for_select([['All Statuses', ''], ['Pending', 'Pending'], ['Confirmed', 'Confirmed'], ['Cancelled', 'Cancelled']], params[:status]), {}, { class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500' }

      .field.w-full.sm:flex-1.sm:min-w-48
        = f.label :start_date, 'From Date', class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.date_field :start_date, value: params[:start_date], class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'

      .field.w-full.sm:flex-1.sm:min-w-48
        = f.label :end_date, 'To Date', class: 'block text-sm font-medium text-gray-700 mb-1'
        = f.date_field :end_date, value: params[:end_date], class: 'w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500'

      .field.w-full.sm:w-auto.sm:flex-shrink-0.flex.flex-col.sm:flex-row.gap-2
        = f.submit 'Apply Filters', class: 'text-white font-semibold px-4 sm:px-6 py-2 rounded-lg transition flex items-center justify-center gap-2', style: 'background-color: #3A6363'
        = link_to 'Clear Filters', vendors_payments_path, class: 'bg-gray-500 hover:bg-gray-600 text-white font-semibold px-4 sm:px-6 py-2 rounded-lg transition flex items-center justify-center gap-2'

  / Earnings Summary Cards
  .grid.grid-cols-1.md:grid-cols-3.gap-6.mb-8
    -# .bg-gradient-to-r.from-green-50.to-green-100.rounded-xl.shadow-lg.p-6
      .flex.items-center.justify-between
        .flex-1
          %h3.text-lg.font-semibold.text-green-800 Total Earnings
          %p.text-3xl.font-bold.text-green-900= number_to_currency(@total_earnings)
          %p.text-sm.text-green-600 All time earnings from paid bookings
        .bg-green-200.rounded-full.p-3
          %i.fas.fa-dollar-sign.text-2xl.text-green-600
    
    -# .bg-gradient-to-r.from-blue-50.to-blue-100.rounded-xl.shadow-lg.p-6
      .flex.items-center.justify-between
        .flex-1
          %h3.text-lg.font-semibold.text-blue-800 This Month
          %p.text-3xl.font-bold.text-blue-900= number_to_currency(@monthly_earnings)
          %p.text-sm.text-blue-600 Earnings for #{Date.current.strftime('%B %Y')}
        .bg-blue-200.rounded-full.p-3
          %i.fas.fa-calendar.text-2xl.text-blue-600
    
    -# .bg-gradient-to-r.from-yellow-50.to-yellow-100.rounded-xl.shadow-lg.p-6
      .flex.items-center.justify-between
        .flex-1
          %h3.text-lg.font-semibold.text-yellow-800 Pending Payments
          %p.text-3xl.font-bold.text-yellow-900= number_to_currency(@pending_payments)
          %p.text-sm.text-yellow-600 From unpaid bookings
        .bg-yellow-200.rounded-full.p-3
          %i.fas.fa-clock.text-2xl.text-yellow-600

  / Payments Table
  .bg-white.rounded-xl.shadow-lg.overflow-hidden
    .p-4.sm:p-6.border-b.border-gray-200
      %h2.text-lg.sm:text-xl.font-bold.flex.flex-wrap.items-center.gap-2{style: 'color: #3a6363'}
        %i.fas.fa-credit-card{style: 'color:#3A6363'}
        Payment History
        - if params[:search].present? || params[:status].present? || params[:car_id].present?
          %span.text-xs.sm:text-sm.font-normal.text-gray-500.ml-2 (#{@paid_bookings.count} results)

    - if @paid_bookings.any?
      .overflow-x-auto.-mx-4.px-4.sm:mx-0.sm:px-0
        %table.w-full{style: "min-width: 900px"}
          %thead.bg-gray-50
            %tr
              %th.px-3.sm:px-4.md:px-6.py-3.sm:py-4.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider Payment ID
              %th.px-3.sm:px-4.md:px-6.py-3.sm:py-4.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider Customer
              %th.px-3.sm:px-4.md:px-6.py-3.sm:py-4.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider Car
              %th.px-3.sm:px-4.md:px-6.py-3.sm:py-4.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider Booking Dates
              %th.px-3.sm:px-4.md:px-6.py-3.sm:py-4.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider Daily Rate
              %th.px-3.sm:px-4.md:px-6.py-3.sm:py-4.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider Duration
              %th.px-3.sm:px-4.md:px-6.py-3.sm:py-4.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider Payment Mode
              %th.px-3.sm:px-4.md:px-6.py-3.sm:py-4.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider Amount
              %th.px-3.sm:px-4.md:px-6.py-3.sm:py-4.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider Payment Date
              %th.px-3.sm:px-4.md:px-6.py-3.sm:py-4.text-left.text-xs.font-semibold.text-gray-600.uppercase.tracking-wider Actions
          %tbody.divide-y.divide-gray-200
            - @paid_bookings.each do |booking|
              - total_days = (booking.end_date - booking.start_date).to_i
              - total_amount = booking.car.daily_price ? booking.car.daily_price * total_days : 0
              %tr.hover:bg-gray-50.transition
                %td.px-3.sm:px-4.md:px-6.py-3.sm:py-4.whitespace-nowrap
                  %span.font-mono.text-xs.sm:text-sm.text-gray-900 ##{booking.id}
                %td.px-3.sm:px-4.md:px-6.py-3.sm:py-4.whitespace-nowrap
                  .flex.flex-col
                    %span.font-medium.text-xs.sm:text-sm.text-gray-900= booking.user&.full_name || 'N/A'
                    %span.text-xs.sm:text-sm.text-gray-500= booking.user&.email
                %td.px-3.sm:px-4.md:px-6.py-3.sm:py-4.whitespace-nowrap
                  .flex.flex-col
                    %span.font-medium.text-xs.sm:text-sm.text-gray-900= "#{booking.car.brand} #{booking.car.model}"
                    %span.text-xs.sm:text-sm.text-gray-500= booking.car.year
                %td.px-3.sm:px-4.md:px-6.py-3.sm:py-4.whitespace-nowrap
                  .flex.flex-col
                    %span.text-xs.sm:text-sm.text-gray-900= booking.start_date.strftime('%b %d, %Y')
                    %span.text-xs.sm:text-sm.text-gray-900= booking.end_date.strftime('%b %d, %Y')
                %td.px-3.sm:px-4.md:px-6.py-3.sm:py-4.whitespace-nowrap
                  %span.text-xs.sm:text-sm.text-gray-900= booking.car.daily_price ? number_to_currency(booking.car.daily_price) : 'N/A'
                %td.px-3.sm:px-4.md:px-6.py-3.sm:py-4.whitespace-nowrap
                  %span.text-xs.sm:text-sm.text-gray-900= "#{total_days} days"
                %td.px-3.sm:px-4.md:px-6.py-3.sm:py-4.whitespace-nowrap
                  %span.text-xs.sm:text-sm.text-gray-900= booking.payment_mode
                %td.px-3.sm:px-4.md:px-6.py-3.sm:py-4.whitespace-nowrap
                  %span.font-semibold.text-xs.sm:text-sm.text-green-600= number_to_currency(total_amount)
                %td.px-3.sm:px-4.md:px-6.py-3.sm:py-4.whitespace-nowrap
                  %span.text-xs.sm:text-sm.text-gray-500= booking.updated_at.strftime('%b %d, %Y')
                %td.px-3.sm:px-4.md:px-6.py-3.sm:py-4.whitespace-nowrap
                  .flex.gap-1.sm:gap-2
                    = link_to vendors_payment_path(booking), class: 'text-blue-600 hover:text-blue-800 transition' do
                      %i.fas.fa-eye.text-sm
                    = link_to vendors_booking_path(booking), class: 'text-green-600 hover:text-green-800 transition' do
                      %i.fas.fa-calendar.text-sm
    - else
      .text-center.py-8.sm:py-12.px-4
        %i.fas.fa-credit-card.text-3xl.sm:text-4xl.text-gray-300.mb-3.sm:mb-4
        %p.text-gray-500.text-base.sm:text-lg No payments found.
        - if params[:search].present? || params[:status].present? || params[:car_id].present?
          %p.text-gray-400.text-sm.mt-2 Try adjusting your filters.
          = link_to 'Clear all filters', vendors_payments_path, class: 'text-blue-600 hover:text-blue-800 font-medium text-sm sm:text-base inline-block mt-2'
        - else
          %p.text-gray-400.text-sm.mt-2 When customers pay for bookings, they will appear here. 