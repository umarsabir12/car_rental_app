%html{ lang: "en" }
  %head
    %meta{ charset: "UTF-8" }
    %meta{ name: "viewport", content: "width=device-width, initial-scale=1.0" }
    %title Admin Login
    %script{ src: "https://cdn.tailwindcss.com" }
  %body.bg-gradient-to-br.from-blue-900.to-blue-200.min-h-screen.flex.items-center.justify-center
    .w-full.max-w-md.bg-white.rounded-2xl.shadow-xl.p-8
      %h1.text-2xl.font-extrabold.text-blue-900.mb-6.text-center Admin Login
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        - if resource.errors.any?
          .mb-4
            %ul.text-red-600.text-sm
              - resource.errors.full_messages.each do |msg|
                %li= msg
        .mb-4
          = f.label :email, class: "block text-sm font-semibold text-blue-800 mb-1"
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-4 py-2 border border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
        .mb-6
          = f.label :password, class: "block text-sm font-semibold text-blue-800 mb-1"
          = f.password_field :password, autocomplete: "current-password", class: "w-full px-4 py-2 border border-blue-200 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-400"
        .flex.items-center.justify-between.mb-6
          .flex.items-center
            = f.check_box :remember_me, class: "mr-2"
            = f.label :remember_me, class: "text-sm text-blue-800"
          = link_to "Forgot your password?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:underline"
        = f.submit "Log in", class: "w-full bg-blue-700 hover:bg-blue-800 text-white font-bold py-2 rounded-lg shadow transition"